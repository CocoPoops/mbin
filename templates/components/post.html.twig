{% if showCommentsPreview and post.commentCount %}
    {% set class = 'mb-0' %}
{% else %}
    {% set class = '' %}
{% endif %}
<blockquote{{ attributes.defaults({class: 'section post ' ~ class}).without('id') }} id="post-{{ post.id }}">
    <header>
        {{ component('user_inline', {user: post.user, hideAvatar: true}) }},
        {% if dateAsUrl %}
            <a href="{{ post_url(post) }}"
               class="link-muted">{{ component('date', {date: post.createdAt}) }}</a>
        {% else %}
            {{ component('date', {date: post.createdAt}) }}
        {% endif %}
        {% if showMagazineName %}{{ 'to'|trans }} {{ component('magazine_inline', {magazine: post.magazine}) }}{% endif %}
    </header>
    {% if post.user.avatar %}
        {{ component('user_avatar', {user: post.user, width: 40, height: 40}) }}
    {% endif %}
    <div class="content">
        {{ post.body|markdown|raw }}
    </div>
    {{ component('vote', {subject: post, showDownvote: false}) }}
    <footer>
        <menu>
            <li>
                <a class="stretched-link"
                   href="{{ not is_route_name('post_single') ? post_url(post) : '#comment-add' }}">{{ 'reply'|trans|lower }}</a>
            </li>
            <li>
                <form>
                    <button class="stretched-link"
                            type="submit">
                        {{ 'favourites'|trans|lower }} {% if post.favouriteCount %}({{ post.favouriteCount }}){% endif %}
                    </button>
                </form>
            </li>
            <li class="dropdown">
                <button class="stretched-link">{{ 'more'|trans|lower }}</button>
                <ul class="dropdown__menu">
                    <li>
                        <a href="{{ path('post_report', {id: post.id}) }}">
                            {{ 'report'|trans|lower }}
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            {{ 'copy_link'|trans|lower }}
                        </a>
                    </li>
                    {% if app.request.locale is not same as 'en' %}
                        <li>
                            <a href="#">
                                {{ 'copy_link_to_fediverse'|trans|lower }}
                            </a>
                        </li>
                    {% endif %}
                </ul>
            </li>
        </menu>
    </footer>
</blockquote>
{% if(showCommentsPreview) %}
    {{ component('post_comments_preview', {post: post}) }}
{% endif %}
