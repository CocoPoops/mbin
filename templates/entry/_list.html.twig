{% from 'entry/_macros.html.twig' import entry %}

<div class="kbin-entry-list">
    {% if entries|length %}
        {% for entry in entries %}
            {{ entry(entry, {
                entry: entry,
                self: app.user,
                extra_classes: 'kbin-entry-list-item',
                title_tag: 'h4'
            }) }}
        {% endfor %}
    {% else %}
        <div class="text-center py-5">
            <span class="display-1">(._.)</span>
            <p>Jeszcze nic tu nie ma...</>
        </div>
    {% endif %}
    {% if(entries.haveToPaginate) %}
        {{ pagerfanta(entries, null, {'pageParameter':'[strona]'}) }}
    {% endif %}
</div>
