<aside class="kbin-options kbin-options-activity">
    <div class="kbin-options__title">
        <h2>{{ 'activity'|trans }} ({{ entry.countVotes + entry.favouriteCount }})</h2>
    </div>
    <menu class="kbin-options__sort">
        <li>
            <a href="{{ entry_voters_url(entry, 'up') }}"
               class="{{ html_classes({'kbin-active': is_route_name('entry_voters') and route_has_param('type', 'up')}) }}">
                {{ 'up_votes'|trans|lower }} ({{ entry.countUpVotes }})
            </a>
        </li>
        <li>
            <a href="{{ entry_voters_url(entry, 'down') }}"
               class="{{ html_classes({'kbin-active': is_route_name('entry_voters') and route_has_param('type', 'down')}) }}">
                {{ 'down_votes'|trans|lower }} ({{ entry.countDownVotes }})
            </a>
        </li>
        <li>
            <a href="{{ entry_favourites_url(entry) }}"
               class="{{ html_classes({'kbin-active': is_route_name('entry_favourites')}) }}">
                {{ 'favourites'|trans|lower }} ({{ entry.favouriteCount }})
            </a>
        </li>
    </menu>
</aside>
