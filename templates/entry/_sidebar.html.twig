<div class="kbin-entry card mb-5 shadow-lg bg-white rounded">
    <div class="kbin-entry-info card-body">
        <div class="kbin-entry-info-user">
            <div class="kbin-entry-avatar float-start">
                <img src="https://picsum.photos/100/100" class="img-thumbnail" alt="{{ entry.user.username }}"/>
            </div>
            <div class="float-start ms-1">
                <h5 class="card-title mt-2 font-weight-bold">{{ entry.user.username }}</h5>

                <div class="kbin-sub btn-group btn-group-sm" role="group">
                    <button type="button" class="btn btn-light" disabled><i class="fas fa-eye"></i> 11</button>
                    <button type="button" class="btn btn btn-outline-light text-dark text-muted rounded-end">obserwuj</button>
                </div>

            </div>
        </div>

        <div class="clearfix"></div>

        <div class="mt-3">
            <ul class="list-unstyled clearfix">
                <li>
                    <span class="text-muted small">Dodano:</span> {{ entry.createdAt|date }}
                </li>
                <li>
                    <span class="text-muted small">Głosy pozytywne:</span> {{ entry.countUpvotes }}
                    {% if(entry.countVotes) %}
                        <small class="text-muted">({{ (entry.countUpvotes / entry.countVotes)|format_percent_number }})</small>
                    {% endif %}
                </li>
                <li>
                    <span class="text-muted small">Głosy negatywne:</span> {{ entry.countDownvotes }}
                </li>
            </ul>
        </div>
    </div>
</div>
