<section class="kbin-section">
    <form class="kbin-comment__add">
        <div class="kbin-group">
            <label>
                <textarea aria-label="{{ 'enter_your_comment'|trans }}"></textarea>
            </label>
        </div>
        <div class="kbin-group kbin-comment-add__actions">
            <button type="button"
                    class="kbin-btn kbin-btn__secondry"
                    aria-label="{{ 'markdown_howto'|trans }}"
                    title="{{ 'markdown_howto'|trans }}">
                <i class="kbin-icon__question"></i>
            </button>
            <button type="button"
                    class="kbin-btn kbin-btn__secondry"
                    aria-label="{{ 'add_media'|trans }}"
                    title="{{ 'add_media'|trans }}">
                <i class="kbin-icon__media"></i>
            </button>
            <input class="btn-kbin kbin-btn__primary" type="submit" value="{{ 'add_comment'|trans }}">
        </div>
    </form>
</section>