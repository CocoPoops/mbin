{% if nested is not defined %}
        {% set nested = true %}
{% endif %}
<aside class="comments entry-comments">
    {% for comment in comments %}
        {{ component('entry_comment', {comment: comment, showNested: nested, showMagazineName: magazine is not defined or not magazine, showEntryTitle: entry is not defined or not entry}) }}
    {% endfor %}

    {% if not comments|length %}
        <aside class="section section--muted user-list">
            <p>{{ 'no_comments'|trans }}</p>
        </aside>
    {% else %}
        <div class="comment-line--2"></div>
        <div class="comment-line--3"></div>
        <div class="comment-line--4"></div>
        <div class="comment-line--5"></div>
        <div class="comment-line--6"></div>
        <div class="comment-line--7"></div>
        <div class="comment-line--8"></div>
        <div class="comment-line--9"></div>
    {% endif %}
</aside>
