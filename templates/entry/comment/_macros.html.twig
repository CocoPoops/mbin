{% use 'entry/comment/_comment.html.twig' %}

{%- macro comment(comment, options) -%}
    {%- with {
        self: app.user,
        comment: comment,
        extra_classes: options.extra_classes ?? null,
        level: 1,
        nested: options.nested ?? null
        } only -%}
        {{ block('comment') }}
    {%- endwith -%}
{%- endmacro -%}
