{% set lang = app.request.locale %}
<aside class="options options--top options-activity">
    <div class="options__title">
        <h2>{{ 'add_new'|trans }}</h2>
    </div>
    <menu class="options__main">
        {% if magazine is defined and magazine %}
            <li>
                <a href="{{ path('magazine_entry_create', {name: magazine.name, type: lang is same as 'pl' ? 'type.article'|trans|lower : 'article'}) }}"
                   class="{{ html_classes({'active': route_has_param('type', lang is same as 'pl' ? 'type.article'|trans|lower : 'article')}) }}">
                    {{ 'type.article'|trans|lower }}
                </a>
            </li>
            <li>
                <a href="{{ path('magazine_entry_create', {name: magazine.name}) }}"
                   class="{{ html_classes({'active': route_has_param('type', lang is same as 'pl' ? 'type.link'|trans|lower : 'link')}) }}">
                    {{ 'type.link'|trans|lower }}
                </a>
            </li>
            <li>
                <a href="{{ path('magazine_entry_create', {name: magazine.name, type: lang is same as 'pl' ? 'type.photo'|trans|lower : 'photo'}) }}"
                   class="{{ html_classes({'active': route_has_param('type', lang is same as 'pl' ? 'type.photo'|trans|lower : 'photo')}) }}">
                    {{ 'type.photo'|trans|lower }}
                </a>
            </li>
            <li>
                <a href="#" class="link-disabled">{{ 'type.video'|trans|lower }}</a>
            </li>
            <li>
                <a href="{{ path('magazine_create') }}"
                   class="{{ html_classes({'active': is_route_name('magazine_create')}) }}">
                    {{ 'type.magazine'|trans|lower }}
                </a>
            </li>
        {% else %}
            <li>
                <a href="{{ path('entry_create', {type: lang is same as 'pl' ? 'type.article'|trans|lower : 'article'}) }}"
                   class="{{ html_classes({'active': route_has_param('type', lang is same as 'pl' ? 'type.article'|trans|lower : 'article')}) }}">
                    {{ 'type.article'|trans|lower }}
                </a>
            </li>
            <li>
                <a href="{{ path('entry_create') }}"
                   class="{{ html_classes({'active': route_has_param('type', lang is same as 'pl' ? 'type.link'|trans|lower : 'link')}) }}">
                    {{ 'type.link'|trans|lower }}
                </a>
            </li>
            <li>
                <a href="{{ path('entry_create', {type: lang is same as 'pl' ? 'type.photo'|trans|lower : 'photo'}) }}"
                   class="{{ html_classes({'active': route_has_param('type', lang is same as 'pl' ? 'type.photo'|trans|lower : 'photo')}) }}">
                    {{ 'type.photo'|trans|lower }}
                </a>
            </li>
            <li>
                <a href="#" class="link-disabled">{{ 'type.video'|trans|lower }}</a>
            </li>
            <li>
                <a href="{{ path('magazine_create') }}"
                   class="{{ html_classes({'active': is_route_name('magazine_create')}) }}">
                    {{ 'type.magazine'|trans|lower }}
                </a>
            </li>
        {% endif %}
    </menu>
</aside>