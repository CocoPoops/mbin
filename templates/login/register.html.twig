{% extends 'base.html.twig' %}

{% block title %}Zaloguj się!{% endblock %}

{% block body %}
    <div class="kbin-login mt-lg-4">
        <div class="kbin-magazine-background"></div>

        <div class="row">
            <div class="col-lg-6 mb-3">
                <h1 class="font-weight-bold mb-5">Zaloguj się</h1>

                {{ form_start(form) }}
                <div class="mb-3">
                    {{ form_label(form.username) }}
                    <div class="input-group input-group-lg">
                        {{ form_widget(form.username) }}
                    </div>
                </div>

                <div class="mb-3">
                    {{ form_label(form.email) }}
                    <div class="input-group input-group-lg">
                        {{ form_widget(form.email) }}
                    </div>
                </div>

                <div class="mb-3">
                    {{ form_label(form.plainPassword.first) }}
                    <div class="input-group input-group-lg">
                        {{ form_widget(form.plainPassword.first) }}
                    </div>
                </div>

                <div class="mb-3">
                    {{ form_label(form.plainPassword.second) }}
                    <div class="input-group input-group-lg">
                        {{ form_widget(form.plainPassword.second) }}
                    </div>
                </div>

                <div class="mb-3">
                    {{ form_label(form.agreeTerms) }}
                    <div class="input-group input-group-lg">
                        {{ form_widget(form.agreeTerms) }}
                    </div>
                </div>

                <div class="mb-12 text-end">
                    {{ form_row(form.submit, { 'label': 'Gotowe' }) }}
                </div>
                {{ form_end(form) }}

                <p class="mt-4">Masz już konto? <a href="{{ path('app_login') }}">Zaloguj się!</a></p>
            </div>
        </div>
    </div>
{% endblock %}
