{% block modlog %}
    {% for log in logs %}
        <div class="section">
            <div>
                {{ block(log.type) }}
            </div>
            <span class="text--muted">{{ component('date', {date: log.createdAt}) }}</span>
        </div>
    {% endfor %}
    {% if(logs.haveToPaginate is defined and logs.haveToPaginate) %}
        {{ pagerfanta(logs, null, {'pageParameter':'[p]'}) }}
    {% endif %}
    {% if not logs|length %}
        <aside class="section section--muted">
            <p>{{ 'empty'|trans }}</p>
        </aside>
    {% endif %}
{% endblock %}

