{% block vote %}
    {%- set VOTE_UP = constant('App\\Entity\\Contracts\\VoteInterface::VOTE_UP') -%}
    {%- set VOTE_DOWN = constant('App\\Entity\\Contracts\\VoteInterface::VOTE_DOWN') -%}
    {%- set VOTE_NONE = constant('App\\Entity\\Contracts\\VoteInterface::VOTE_NONE') -%}
    {%- set user_choice = is_granted('ROLE_USER') ? votable.userChoice(app.user) : null -%}

    <div class="kbin-{{ base_class }}-vote" data-controller="vote" data-vote-uv-class="kbin-vote-uv--active" data-vote-dv-class="kbin-vote-dv--active">
        <ul class="kbin-{{ base_class }}-vote-list">
            <li class="kbin-{{ base_class }}-vote-list-item kbin-vote kbin-vote-uv {% if(user_choice is same as(VOTE_UP)) %}kbin-vote-uv--active{% endif %}"
                data-vote-target="upVote">
                <form action="{{ path(form_dest, {id: votable.id,choice: VOTE_UP}) }}" method="POST">
                    <button type="submit" {{ is_granted('vote', votable) ? '' : 'disabled' }} data-action="vote#upVote">
                        {{ votable.countUpvotes }}<span class="fa fa-arrow-up"></span>
                    </button>
                    <input type="hidden" name="token" value="{{ csrf_token('vote') }}">
                </form>
            </li>

            <li class="kbin-{{ base_class }}-vote-list-item kbin-vote kbin-vote-dv {% if(user_choice is same as(VOTE_DOWN)) %}kbin-vote-dv--active{% endif %}"
                data-vote-target="downVote">
                <form action="{{ path(form_dest, {id: votable.id,choice: VOTE_DOWN}) }}" method="POST">
                    <button type="submit" {{ is_granted('vote', votable) ? '' : 'disabled' }} data-action="vote#downVote">
                        {{ votable.countDownvotes }}<span class="fa fa-arrow-down"></span>
                    </button>
                    <input type="hidden" name="token" value="{{ csrf_token('vote') }}">
                </form>
            </li>
        </ul>
    </div>
{% endblock vote %}
