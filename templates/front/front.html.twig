{% extends 'base.html.twig' %}

{% block body %}
    <div class="kbin-entry-list">
        {% for entry in entries %}
            <article id="{{ entry.id }}" class="kbin-entry-list-item">
                <div class="kbin-vote">
                    <ul class="kbin-vote-list">
                        <li class="kbin-vote-list-item kbin-vote-uv">
                            <a href="#">4<span class="fa fa-arrow-up"></span>
                            </a>
                        </li>

                        <li class="kbin-vote-list-item kbin-vote-dv">
                            <a href="#">0<span class="fa fa-arrow-down"></span>
                            </a>
                        </li>
                    </ul>
                </div>

                <div class="kbin-image">
                    <img src="http://web.archive.org/web/20180203151128im_/https://makigi.pl/media/cache/post_thumb/images/post/MakigiDevLog/1487022355_makigi.jpeg"
                         alt="Makigi.pl - RozkÅ‚ad jazdy 2017">
                </div>

                <div class="kbin-meta">
                    <h4 class="kbin-meta-title">
                        <a href="{{ path('entry', {'magazine_name': entry.magazine.name, 'entry_id': entry.id}) }}">{{ entry.title }}</a>
                    </h4>
                </div>

                <div class="clearfix"></div>
            </article>
        {% endfor %}
    </div>
{% endblock %}
