{% set lang = app.request.locale %}
<aside class="options" id="options">
    <div></div>
    <menu class="options__main">
        <li>
            <a href="{{ options_url('sortBy', lang is same as 'pl' ? 'top'|trans|lower : 'top') }}"
               class="{{ html_classes({'active': route_has_param('sortBy', lang is same as 'pl' ? 'top'|trans|lower : 'top')}) }}">
                {{ 'top'|trans|lower }}
            </a>
        </li>
        <li>
            <a href="{{ options_url('sortBy', lang is same as 'pl' ? 'hot'|trans|lower : 'hot') }}"
               class="{{ html_classes({'active': route_has_param('sortBy', 'hot'|trans|lower) or route_has_param('sortBy', 'hot')}) }}">
                {{ 'hot'|trans|lower }}
            </a>
        </li>
        <li>
            <a href="{{ options_url('sortBy', lang is same as 'pl' ? 'newest'|trans|lower : 'newest') }}"
               class="{{ html_classes({'active': route_has_param('sortBy', lang is same as 'pl' ? 'newest'|trans|lower : 'newest')}) }}">
                {{ 'newest'|trans|lower }}
            </a>
        </li>
        <li>
            <a href="{{ options_url('sortBy', lang is same as 'pl' ? 'active'|trans|lower : 'active') }}"
               class="{{ html_classes({'active': route_has_param('sortBy', lang is same as 'pl' ? 'active'|trans|lower : 'active')}) }}">
                {{ 'active'|trans|lower }}
            </a>
        </li>
        <li>
            <a href="{{ options_url('sortBy', lang is same as 'pl' ? 'commented'|trans|lower : 'commented') }}"
               class="{{ html_classes({'active': route_has_param('sortBy', lang is same as 'pl' ? 'commented'|trans|lower : 'commented')}) }}">
                {{ 'commented'|trans|lower }}
            </a>
        </li>
    </menu>
    <menu class="options__filters">
        <li class="dropdown">
            <button aria-label="{{ 'filter_by_time'|trans }}"
                    title="{{ 'filter_by_time'|trans }}"><i
                        class="fa-solid fa-clock-rotate-left"></i> {{ 'filter_by_time'|trans }}</button>
            <ul class="dropdown__menu">
                <li>
                    <a href="{{ options_url('time', '∞') }}"
                       class="{{ html_classes({'active': route_has_param('time', '∞') or not get_route_param('time')}) }}">
                        {{ '∞' }}
                    </a>
                </li>
                <li>
                    <a href="{{ options_url('time', lang is same as 'pl' ? '3h'|trans|lower : '3h') }}"
                       class="{{ html_classes({'active': route_has_param('time', lang is same as 'pl' ? '3h'|trans|lower : '3h')}) }}">
                        {{ '3h'|trans|lower }}
                    </a>
                </li>
                <li>
                    <a href="{{ options_url('time', lang is same as 'pl' ? '6h'|trans|lower : '6h') }}"
                       class="{{ html_classes({'active': route_has_param('time', lang is same as 'pl' ? '6h'|trans|lower : '6h')}) }}">
                        {{ '6h'|trans|lower }}
                    </a>
                </li>
                <li>
                    <a href="{{ options_url('time', lang is same as 'pl' ? '12h'|trans|lower : '12h') }}"
                       class="{{ html_classes({'active': route_has_param('time', lang is same as 'pl' ? '12h'|trans|lower : '12h')}) }}">
                        {{ '12h'|trans|lower }}
                    </a>
                </li>
                {% if get_active_sort_option() is not same as 'hot'|trans|lower %}
                    <li>
                        <a href="{{ options_url('time', lang is same as 'pl' ? '1d'|trans|lower : '1d') }}"
                           class="{{ html_classes({'active': route_has_param('time', lang is same as 'pl' ? '1d'|trans|lower : '1d')}) }}">
                            {{ '1d'|trans|lower }}
                        </a>
                    </li>
                    <li>
                        <a href="{{ options_url('time', lang is same as 'pl' ? '1w'|trans|lower : '1w') }}"
                           class="{{ html_classes({'active': route_has_param('time', lang is same as 'pl' ? '1w'|trans|lower : '1w')}) }}">
                            {{ '1w'|trans|lower }}
                        </a>
                    </li>
                    <li>
                        <a href="{{ options_url('time', lang is same as 'pl' ? '1m'|trans|lower : '1m') }}"
                           class="{{ html_classes({'active': route_has_param('time', lang is same as 'pl' ? '1m'|trans|lower : '1m')}) }}">
                            {{ '1m'|trans|lower }}
                        </a>
                    </li>
                    <li>
                        <a href="{{ options_url('time', lang is same as 'pl' ? '1y'|trans|lower : '1y') }}"
                           class="{{ html_classes({'active': route_has_param('time', lang is same as 'pl' ? '1y'|trans|lower : '1y')}) }}">
                            {{ '1y'|trans|lower }}
                        </a>
                    </li>
                {% endif %}
            </ul>
        </li>
    </menu>
</aside>
