<aside class="kbin-options">
    <div class="kbin-options__title">
        <h2>{{ 'activity'|trans }} ({{ post.countVotes + post.favouriteCount }})</h2>
    </div>
    <menu class="kbin-options__sort">
        <li>
            <a href="{{ post_voters_url(post, 'up') }}"
               class="{{ html_classes({'kbin-active': is_route_name('post_voters') and route_has_param('type', 'up')}) }}">
                {{ 'up_votes'|trans|lower }} ({{ post.countUpVotes }})
            </a>
        </li>
        <li>
            <a href="{{ post_favourites_url(post) }}"
               class="{{ html_classes({'kbin-active': is_route_name('post_favourites')}) }}">
                {{ 'favourites'|trans|lower }} ({{ post.favouriteCount }})
            </a>
        </li>
    </menu>
</aside>
