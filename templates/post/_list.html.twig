{% from 'post/_macros.html.twig' import post %}

<div class="kbin-post-list">
    {% if posts|length %}
        {% for post in posts %}
            {{ post(post, {
                post: post,
                self: app.user,
                extra_classes: 'kbin-post-list-item',
                show_best_comments: true,
                title_tag: 'h4'
            }) }}
        {% endfor %}
    {% else %}
    <div class="text-center py-5 text-muted">
        <span class="display-1">ಥ﹏ಥ</span>
        <p>Jeszcze nic tu nie ma...</>
    </div>
    {% endif %}
    {% if(posts.haveToPaginate) %}
        {{ pagerfanta(posts, null, {'pageParameter':'[strona]'}) }}
    {% endif %}
</div>
