{% from 'user/_macros.html.twig' import avatar %}

<div class="kbin-user-profile mb-2 mt-5 mt-lg-0">
    <div class="kbin-entry card mb-5 shadow-lg bg-white rounded">
        <div class="kbin-entry-info card-body">
            <div class="kbin-entry-info-user">
                <div class="kbin-entry-avatar float-start">
                    {{ avatar(user) }}
                </div>
                <div class="float-start ms-1">
                    <h5 class="card-title font-weight-bold">{{ user.username }}</h5>
                    {% include 'user/_follow_button.html.twig' %}
                </div>
            </div>

            <div class="clearfix"></div>

            <div class="mt-3">
                <ul class="list-unstyled clearfix">
                    <li>
                        <span class="text-muted small">Dołączył:</span> {{ user.createdAt|ago }}
                    </li>
                    <li>
                        <span class="text-muted small">Punkty reputacji:</span> {{ user.entries|length + user.entryComments|length }}
                    </li>
                    <li>
                        <span class="text-muted small">Komentarze:</span> {{ user.entryComments|length }}
                    </li>
                    <li>
                        <span class="text-muted small">Treści:</span> {{ user.entries|length }}
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="kbin-moderators mb-5">
        <div class="card">
            <div class="card-header">
                Moderuje
            </div>
            <ul class="list-group list-group-flush">
                {% for moderator in user.moderatorTokens %}
                    <li class="list-group-item">
                        m/<a href="{{ path('magazine_front', {'name': moderator.magazine.name}) }}">{{ moderator.magazine.name }}</a>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
</div>

