{% extends 'base.html.twig' %}

{% block mainClass %}page-user-replies{% endblock %}

{% block header_nav %}
{% endblock %}

{% block sidebar_top %}
{% endblock %}

{% block body %}
    <header>
        <h1 hidden>{{ user.username|username }}</h1>
    </header>
    {% include('user/_options.html.twig') %}
    {% include('user/_federated_info.html.twig') %}
    <div id="content">
        <aside class="subjects">
            {% for subject in results %}
                {% include 'layout/_subject.html.twig' %}
            {% endfor %}

            {% if not results|length %}
                <aside class="section section--muted user-list">
                    <p>{{ 'empty'|trans }}</p>
                </aside>
            {% endif %}
        </aside>
    </div>
{% endblock %}
