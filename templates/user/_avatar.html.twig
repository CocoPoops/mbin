{% block avatar %}
    <div class="kbin-avatar">
        {% if user.avatar %}
            <img width="{{ width ?? '100' }}" height="{{ height ?? '100' }}" class="img-thumbnail" src="{{ asset(user.avatar.filePath) | imagine_filter('avatar_thumb') }}" alt="{{ user.username }}"/>
        {% else %}
            <img width="{{ width ?? '100' }}" height="{{ height ?? '100' }}" class="img-thumbnail" src="{{ asset('build/images/avatar.jpg') }}" alt="{{ user.username }}"/>
        {% endif %}
    </div>
{% endblock %}
