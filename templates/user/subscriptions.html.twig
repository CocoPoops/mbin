{% extends 'base.html.twig' %}
{% from '_layout/_not_found.html.twig' import not_found %}

{%- block title -%}{{- user.username }} - {{ 'subscriptions'|trans -}}{%- endblock -%}

{% block body %}
    <div class="kbin-user-subscriptions-page">
        {% include 'user/_instance_info.twig' %}
        {{ component('title', {title: user.apPreferredUsername ?? user.username, url: path('user', {username: user.username})}) }}
        {% include 'user/_nav.html.twig' %}

        {% if magazines|length %}
            <div class="mt-5">
                {% include'magazine/_list_table.html.twig' %}
            </div>
        {% else %}
            {{ not_found() }}
        {% endif %}
    </div>
{% endblock %}

{% block sidebar %}
    {% include 'user/_sidebar.html.twig' %}
    {{ parent() }}
    <div class="mb-4">
        {% include 'user/_moderator_list_card.html.twig' %}
    </div>
{% endblock %}
