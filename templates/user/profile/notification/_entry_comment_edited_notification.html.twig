{% from 'user/_macros.html.twig' import user %}
{% from '_layout/_macros.html.twig' import entry_url %}

<div class="toast-header">
    <strong class="me-auto">{{ component('magazine_inline', { magazine: notification.comment.entry.magazine }) }}</strong>

    <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
</div>
<div class="toast-body">
    {{ user(notification.user, {prefix: false}) }} {{ 'edited_comment'|trans }} - <strong><a
                href="{{ entry_url(notification.comment.entry) }}">{{ notification.comment.shortTitle }}</a></strong>
</div>
