{% from '_layout/_macros.html.twig' import entry_url %}

<div class="toast-header">
    <strong class="me-auto">{{ component('magazine_inline', { magazine: notification.entry.magazine }) }}</strong>

    <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
</div>
<div class="toast-body">
    <strong><a href="{{ entry_url(notification.entry) }}">{{ notification.entry.shortTitle }}</a></strong>
    {% if notification.entry.isTrashed %}{{ 'removed'|trans }}{% else %}{{ 'deleted'|trans }}{% endif %}
</div>
