{% extends 'base.html.twig' %}

{%- block title -%}
    {{- 'settings'|trans }} - {{ app.user.username|username(false) }} - {{ parent() -}}
{%- endblock -%}


{% block mainClass %}page-settings page-settings-general{% endblock %}

{% block header_nav %}
{% endblock %}

{% block sidebar_top %}
{% endblock %}

{% block body %}
    {% include('user/settings/_options.html.twig') %}
    <div id="content" class="section">
        <div class="container">
            <h1 hidden>{{ 'profile'|trans }}</h1>
            {{ form_start(form) }}
            {{ form_row(form.oldEmail, {label: 'old_email', value: app.user.email, attr: {disabled: 'disabled'}}) }}
            {{ form_row(form.email, {label: 'new_email', value: ''}) }}
            {{ form_row(form.currentPassword, {label: 'password'}) }}
            <div class="group actions">
                {{ form_row(form.submit, {label: 'save', attr: {class: 'btn btn__primary'}}) }}
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
