{% extends 'base.html.twig' %}

{% block title %}Profil użytkownika | {{ parent() }}{% endblock %}

{% block body %}
    <div class="kbin-profile kbin-profile-page">
        {% include 'profile/_tabs.html.twig' %}

        <h2 class="font-weight-bold">Treści</h2>
        {{ render_chart(contentChart) }}

        <h2 class="font-weight-bold mt-4">Głosy</h2>
        {{ render_chart(voteChart) }}
    </div>
{% endblock %}

{% block sidebar %}
    {% include 'user/_sidebar.html.twig' with {user: app.user} %}
    {% include 'profile/_sidebar.html.twig' %}
    {{ parent() }}
    <div class="mb-4">
        {% include 'user/_moderator_list_card.html.twig'with {user: app.user} %}
    </div>
{% endblock %}
