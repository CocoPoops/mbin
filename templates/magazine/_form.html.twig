{{ form_start(form) }}
<div class="col-lg-6 mb-3">
    <div class="kbin-magazine-create-form">
        <div class="input-group-lg mb-3">
            {{ form_label(form.title) }}
            {{ form_widget(form.title) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.name) }}
            <div class="input-group input-group-lg">
                <span class="input-group-text" id="magazine_name">m/</span>
                {{ form_widget(form.name, { 'attr': {'aria-describedby': 'magazine_name', 'id': 'magazine_name'}}) }}
            </div>
            <div class="valid-feedback">
                {{ form_errors(form.name) }}
            </div>
        </div>

        <div class="mb-3">
            {{ form_label(form.description) }}
            <div class="input-group">
                {{ form_widget(form.description) }}
            </div>
            <div class="valid-feedback">
                {{ form_errors(form.description) }}
            </div>
        </div>

        <div class="mb-3">
            {{ form_label(form.rules) }}
            <div class="input-group">
                {{ form_widget(form.rules) }}
            </div>
            <div class="valid-feedback">
                {{ form_errors(form.rules) }}
            </div>
        </div>

        <div class="mb-12 text-end">
            {{ form_row(form.submit, { 'label': 'Gotowe' }) }}
        </div>
    </div>
</div>
{{ form_end(form) }}
