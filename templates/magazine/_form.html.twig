{{ form_start(form) }}
<div class="col-lg-6 mb-3">
    <div class="kbin-magazine-create-form">
        <div class="input-group-lg mb-3">
            {{ form_label(form.title, 'Tytu≈Ç') }}
            {{ form_widget(form.title) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.name, 'Nazwa') }}
            <div class="input-group input-group-lg">
                <span class="input-group-text" id="magazine_name">m/</span>
                {{ form_widget(form.name, { 'attr': {'aria-describedby': 'magazine_name', 'id': 'magazine_name'}}) }}
            </div>
        </div>

        <div class="mb-3">
            {{ form_label(form.description, 'Opis') }}
            <div class="input-group">
                {{ form_widget(form.description) }}
            </div>
