{% extends 'base.html.twig' %}

{%- block title -%}
    {{- 'magazines'|trans }} - {{ parent() -}}
{%- endblock -%}

{% block mainClass %}page-magazines{% endblock %}

{% block header_nav %}
{% endblock %}

{% block sidebar_top %}
{% endblock %}

{% block body %}
    <header>
        <h1 hidden>{{ 'magazines'|trans }}</h1>
    </header>
    {% include 'magazine/_options.html.twig' %}
    <div class="section">
        <div class="container">
            <form method="get">
                <div class="flex" style="align-items: center">
                    <input value="{{ q }}" type="text" name="q" class="form-control"
                           placeholder="{{ 'type_search_term'|trans }}">
                    <button class="btn btn__primary" type="submit" aria-label="{{ 'search'|trans }}">
                        <i class="fa-solid fa-magnifying-glass"></i>
                    </button>
                </div>
            </form>
        </div>
    </div>
    <div id="content">
        {% include 'magazine/_list.html.twig' %}
    </div>
{% endblock %}
