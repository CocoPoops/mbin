<div class="appearance">
    <div class="row">
        <span>{{ 'show_users_avatars'|trans }}:</span>
        <div>
            <a class="{{ html_classes('link-muted', {'active': app.request.cookies.get(constant('App\\Controller\\User\\ThemeSettingsController::KBIN_SHOW_USERS_AVATARS')) is same as 'true'}) }}"
