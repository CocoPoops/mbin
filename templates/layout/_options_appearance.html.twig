            <a class="{{ html_classes('link-muted', {'active': not app.request.cookies.has(constant('App\\Controller\\User\\ThemeSettingsController::KBIN_SHOW_USERS_AVATARS')) or app.request.cookies.get(constant('App\\Controller\\User\\ThemeSettingsController::KBIN_SHOW_USERS_AVATARS')) is same as 'false'}) }}"
