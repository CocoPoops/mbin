<div class="kbin-options kbin-options--top">
    <menu>
        <li><a href="#" title="Federacja" aria-label="Federacja"><i class="kbin-icon__fediverse"></i></a></li>
        <li><a href="#" title="Ustawienia" aria-label="Ustawienia"><i class="kbin-icon__settings"></i></a></li>
    </menu>
</div>
{% if entry is defined and magazine %}
    {% include 'entry/_info.html.twig' %}
{% endif %}
{% if magazine is defined and magazine %}
    {{ component('magazine', {magazine: magazine}) }}
    <section class="kbin-moderators">
        <h3>{{ 'moderators'|trans }}</h3>
        <ul>
            {% for moderator in magazine.moderators|slice(0, 5) %}
                <li>
                    {% if moderator.user.avatar %}
                        <figure>
                            <img width="30"
                                 height="30"
                                 class="img-thumbnail"
                                 src="{{ asset(moderator.user.avatar.filePath) | imagine_filter('avatar_thumb') }}"
                                 alt="{{ moderator.user.username ~ ' ' ~ 'avatar'|trans|lower }}">
                        </figure>
                    {% endif %}
                    <a href="{{ path('user', {username: moderator.user.username}) }}"
                       class="kbin-stretched-link">{{ moderator.user.username|username }}</a>
                </li>
            {% endfor %}
        </ul>
        {% if magazine.moderators|length > 5 %}
            <footer>
                <a href="{{ path('magazine_moderators', {name: magazine.name}) }}" class="kbin-stretched-link">zobacz
                    wiÄ™cej</a>
            </footer>
        {% endif %}
    </section>
{% endif %}
