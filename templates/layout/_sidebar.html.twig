<div>
    <div class="options options--top">
        <menu>
            <li><a href="#" title="Federacja" aria-label="Federacja"><i class="fa-solid fa-network-wired"></i></a></li>
            <li><a href="#" title="Ustawienia" aria-label="Ustawienia"><i class="fa-solid fa-sliders"></i></a></li>
        </menu>
    </div>
    <div class="section">
        <h3>{{ 'theme'|trans }}</h3>
        <div class="settings">
            <a href="{{ path('theme_settings', {key: constant('App\\Controller\\User\\ThemeSettingsController::KBIN_THEME'), value: 'light'}) }}"
               title="{{ 'light'|trans }} {{ 'theme'|trans }}"
               aria-label="{{ 'light'|trans }} {{ 'theme'|trans }}"
               rel="nofollow">
                <div class="theme light"></div>
            </a>
            <a href="{{ path('theme_settings', {key: constant('App\\Controller\\User\\ThemeSettingsController::KBIN_THEME'), value: 'dark'}) }}"
               title="{{ 'dark'|trans }} {{ 'theme'|trans }}"
               aria-label="{{ 'dark'|trans }} {{ 'theme'|trans }}"
               rel="nofollow">
                <div class="theme dark"></div>
            </a>
            <a href="{{ path('theme_settings', {key: constant('App\\Controller\\User\\ThemeSettingsController::KBIN_THEME'), value: 'solarized-light'}) }}"
               title="{{ 'solarized_light'|trans }} {{ 'theme'|trans }}"
               aria-label="{{ 'solarized_light'|trans }} {{ 'theme'|trans }}"
               rel="nofollow">
                <div class="theme solarized-light"></div>
            </a>
            <a href="{{ path('theme_settings', {key: constant('App\\Controller\\User\\ThemeSettingsController::KBIN_THEME'), value: 'solarized-dark'}) }}"
               title="{{ 'solarized_dark'|trans }} {{ 'theme'|trans }}"
               aria-label="{{ 'solarized_dark'|trans }} {{ 'theme'|trans }}"
               rel="nofollow">
                <div class="theme solarized-dark"></div>
            </a>
        </div>
        <h3>{{ 'font_size'|trans }}</h3>
        <div class="settings">
            <a href="{{ path('theme_settings', {key: constant('App\\Controller\\User\\ThemeSettingsController::KBIN_FONT_SIZE'), value: '100'}) }}"
               class="link-muted"
               title="100% {{ 'size'|trans }}"
               aria-label="100% {{ 'size'|trans }}"
               rel="nofollow">
                <i class="fa-solid fa-font"></i>
            </a>
            <a href="{{ path('theme_settings', {key: constant('App\\Controller\\User\\ThemeSettingsController::KBIN_FONT_SIZE'), value: '120'}) }}"
               class="link-muted"
               title="120% {{ 'size'|trans }}"
               aria-label="120% {{ 'size'|trans }}"
               rel="nofollow">
                <i style="font-size:120%" class="fa-solid fa-font"></i>
            </a>
            <a href="{{ path('theme_settings', {key: constant('App\\Controller\\User\\ThemeSettingsController::KBIN_FONT_SIZE'), value: '150'}) }}"
               class="link-muted"
               title="150% {{ 'size'|trans }}"
               aria-label="150% {{ 'size'|trans }}"
               rel="nofollow">
                <i style="font-size:150%" class="fa-solid fa-font"></i>
            </a>
        </div>
    </div>
</div>


{% if sidebar_top is empty %}
{% else %}
    {{ sidebar_top|raw }}
{% endif %}
{% if user is defined %}
    {% include 'user/_info.html.twig' %}
{% endif %}
{% if entry is defined and magazine %}
    {% include 'entry/_info.html.twig' %}
{% endif %}
{% if magazine is defined and magazine %}
    {{ component('magazine', {magazine: magazine, showSectionTitle: true}) }}
    {% include 'magazine/_moderators_sidebar.html.twig' %}
{% endif %}
