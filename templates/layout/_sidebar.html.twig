<div class="sidebar-options">
    <div class="options options--top">
        <menu>
            <li><a href="#federation" title="{{ 'federation'|trans }}" aria-label="{{ 'federation'|trans }}"><i
                            class="fa-solid fa-network-wired"></i></a></li>
            <li><a href="#settings" title="{{ 'settings'|trans }}" aria-label="{{ 'settings'|trans }}"><i
                            class="fa-solid fa-gear"></i></a></li>
        </menu>
    </div>
    <div id="settings" class="section">
        <h3>{{ 'theme'|trans }}</h3>
        {% include 'layout/_options_theme.html.twig' %}
        {% include 'layout/_options_font_size.html.twig' %}
        {% include 'layout/_options_appearance.html.twig' %}
    </div>
    <div id="federation" class="section">
        <h3>{{ 'federation'|trans }}</h3>
        <div class="settings-list">
            <div class="row">
                <span>{{ 'status'|trans }}:</span>
                <div>
                    <a class="active"
                       href="#federation">
                        {{ 'on'|trans }}
                    </a>
                    |
                    <a class=""
                       href="#federation">
                        {{ 'off'|trans }}
                    </a>
                </div>
            </div>

            <div class="row">
                <strong>{{ 'instances'|trans }}:</strong>
            </div>
        </div>
    </div>
</div>


{% if sidebar_top is empty %}
{% else %}
    {{ sidebar_top|raw }}
{% endif %}
{% if user is defined %}
    {% include 'user/_info.html.twig' %}
{% endif %}
{% if entry is defined and magazine %}
    {% include 'entry/_info.html.twig' %}
{% endif %}
{% if magazine is defined and magazine %}
    {{ component('magazine', {magazine: magazine, showSectionTitle: true}) }}
    {% include 'magazine/_moderators_sidebar.html.twig' %}
{% endif %}
{{ component('related_posts') }}
