{%- set TYPE_GENERAL = constant('App\\Repository\\StatsRepository::TYPE_GENERAL') -%}
{%- set TYPE_CONTENT = constant('App\\Repository\\StatsRepository::TYPE_CONTENT') -%}
{%- set TYPE_VIEWS = constant('App\\Repository\\StatsRepository::TYPE_VIEWS') -%}
{%- set TYPE_VOTES = constant('App\\Repository\\StatsRepository::TYPE_VOTES') -%}
<aside class="options options--top" id="options">
    <div></div>
    <menu class="options__main">
        <li>
            <a href="{{ path('stats', {statsType: TYPE_GENERAL|trans|lower}) }}"
               class="{{ html_classes({'active': route_has_param('statsType', TYPE_GENERAL|trans|lower) or get_route_param('statsType') is same as null}) }}">
                {{ TYPE_GENERAL|trans|lower }}
            </a>
        </li>
        <li>
            <a href="{{ path('stats', {statsType: TYPE_CONTENT|trans|lower}) }}"
               class="{{ html_classes({'active': route_has_param('statsType', TYPE_CONTENT|trans|lower)}) }}">
                {{ TYPE_CONTENT|trans|lower }}
            </a>
        </li>
        <li>
            <a href="{{ path('stats', {statsType: TYPE_VOTES|trans|lower}) }}"
               class="{{ html_classes({'active': route_has_param('statsType', TYPE_VOTES|trans|lower)}) }}">
                {{ TYPE_VOTES|trans|lower }}
            </a>
        </li>
        <li>
            <a href="{{ path('stats', {statsType: TYPE_VIEWS|trans|lower}) }}"
               class="{{ html_classes({'active': route_has_param('statsType', TYPE_VIEWS|trans|lower)}) }}">
                {{ TYPE_VIEWS|trans|lower }}
            </a>
        </li>
    </menu>
</aside>
