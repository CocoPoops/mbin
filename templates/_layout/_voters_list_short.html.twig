<div class="kbin-users kbin-voters mb-5">
    <div class="card">
        <div class="card-header">
            <h4 class="h6 my-0">{{ 'votes'|trans }}</h4>
        </div>
        <ul class="list-group list-group-flush">
            {% for vote in votes %}
                <li class="list-group-item small">
                    <div class="d-flex bd-highlight">
                        {% include 'user/_avatar.html.twig' with { user: vote.user } %}
                        <a class="text-decoration-none stretched-link small align-self-center flex-grow-1"
                           href="{{ path('user', {'username': vote.user.username}) }}">{{ vote.user.username|trim('@', 'left') }}</a>
                        {% if vote.choice is same as 1 %}
                            <span class="fa fa-arrow-up float-end kbin-color-up-vote align-self-center"></span>
                        {% else %}
                            <span class="fa fa-arrow-down float-end kbin-color-down-vote align-self-center"></span>
                        {% endif %}
                    </div>
                </li>
            {% endfor %}
            {% if more %}
                <li class="list-group-item text-center">
                    <a class="text-decoration-none stretched-link"
                       href="{{ url }}">+{{ more }} {{ 'more'|trans }}...</a>
                </li>
            {% endif %}
        </ul>
    </div>
</div>
