{% if(magazine is defined and magazine is not null) %}
    <div class="kbin-random-magazine">
        <h4 class="font-weight-bold kbin-logo-color mb-1 h6 text-uppercase">{{ 'random_magazine'|trans }}</h4>
        <div class="hr mb-3"></div>
        {{ component('magazine', {
            magazine: magazine,
            showRules: false,
            showInfo: false,
            showStats: false,
            showSubButtons: false,
            asLink: true,
            titleTag: 'span'
        }) }}
    </div>
{% endif %}
