{% extends 'base.html.twig' %}

{%- block title -%}
    {{- domain.name ~ (is_active_sort_option('sort.hot'|trans|lower, true) ? '' : ' - ' ~ get_active_sort_option()|capitalize) -}}
{%- endblock -%}

{% block body %}
    <div class="kbin-comment-wrapper">
        {{ component('title', {title: domain.name, url: path('domain_front', {name: domain.name})}) }}
        {% include 'domain/_nav.html.twig' %}
        {% include '_layout/_filters.html.twig' %}
        {% include 'entry/comment/_list.html.twig' %}
    </div>
{% endblock %}

{% block sidebar %}
    {% include 'domain/_sidebar.html.twig' %}
{% endblock %}
