{% if is_granted('ROLE_ADMIN') %}
    <div class="kbin-add kbin-magazine-panel d-grid gap-2 {{ app.user and magazine is defined and is_granted('edit', magazine) ? 'mb-2' : 'mb-5' }}">
        <a href="{{ path('admin_dashboard') }}"
           type="button"
           class="btn btn-secondary btn-lg mb-1 kbin-add-btn {{ is_admin_panel_page() ? 'visually-hidden' : '' }}">
            {{ 'admin_panel'|trans }}
        </a>

        <div class="list-group w-auto {{ not kbin_js_enabled() or is_admin_panel_page() ? '' : 'visually-hidden' }}">
            <a href="{{ path('admin_dashboard') }}"
               class="list-group-item list-group-item-action d-flex gap-3 py-3 {{ is_active_route('admin_dashboard') ? 'active' : '' }}"
               aria-current="true">
                <div class="d-flex gap-2 w-100 justify-content-between">
                    <div>
                        <span class="mb-0 h6">{{ 'dashboard'|trans }}</span>
                    </div>
                </div>
            </a>
            <a href="{{ path('admin_users') }}"
               class="list-group-item list-group-item-action d-flex gap-3 py-3 {{ is_active_route('admin_users') ? 'active' : '' }}"
               aria-current="true">
                <div class="d-flex gap-2 w-100 justify-content-between">
                    <div>
                        <span class="mb-0 h6">{{ 'users'|trans }}</span>
                    </div>
                </div>
            </a>
            <a href="{{ path('admin_settings') }}"
               class="list-group-item list-group-item-action d-flex gap-3 py-3 {{ is_active_route('admin_settings') ? 'active' : '' }}"
               aria-current="true">
                <div class="d-flex gap-2 w-100 justify-content-between">
                    <div>
                        <span class="mb-0 h6">{{ 'settings'|trans }}</span>
                    </div>
                </div>
            </a>
        </div>
    </div>
{% endif %}
